@model IEnumerable<ControleDeEstoque.ViewModels.DevolucaoComprasViewModel>

@{
    ViewBag.Title = "Devolução";
}

<h2>Devoluções</h2>

<p>
    <button onclick="window.location.replace('@Url.Action("Create")')" class="btn btn-success">Novo</button>
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompraId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompraId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DevolucaoCompraId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DevolucaoCompraId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DevolucaoCompraId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="text-center">
        <h4>Não há registro de Devoluções!</h4>
    </div>
}
