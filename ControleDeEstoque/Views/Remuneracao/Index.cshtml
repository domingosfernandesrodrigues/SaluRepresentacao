@model IEnumerable<ControleDeEstoque.ViewModels.RemuneracaoViewModel>

@{
    ViewBag.Title = "Remuneração";
}

<h2>Remunerações</h2>

<p>
    <button onclick="window.location.replace('@Url.Action("Create")')" class="btn btn-success">Novo</button>
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuncionarioId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcionario.Nome)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.RemuneracaoId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.RemuneracaoId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.RemuneracaoId })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="text-center">
        <h4>Não há registro de Remuneração!</h4>
    </div>
}
