@model IEnumerable<ControleDeEstoque.ViewModels.ItensVendaViewModel>
@{
    ViewBag.Title = "Venda";
}
<h2>Vendas</h2>
<p>
    <button onclick="window.location.replace('@Url.Action("Create")')" class="btn btn-success">Novo</button>
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venda.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venda.TotalVenda)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qtde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.VendaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venda.TotalVenda)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ItensVendaId, }) |
                    @Html.ActionLink("Comprovante", "Details", new { id = item.ItensVendaId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.ItensVendaId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="text-center">
        <h4>Não há registro de Vendas!</h4>
    </div>
}
