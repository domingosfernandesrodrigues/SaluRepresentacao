@model ControleDeEstoque.ViewModels.ItensVendaViewModel
@{
    ViewBag.Title = "Venda";
}

<div>
    <h2>Excluir Venda</h2>
    <hr />
    <fieldset class="form-horizontal">
        <div class="row">

            <div class="col-lg-3">
                @Html.LabelFor(model => model.Venda.NotaFiscal)
                <span class="form-control">@Html.DisplayFor(model => model.Venda.NotaFiscal)</span>
            </div>

            <div class="col-lg-9">
                @Html.LabelFor(model => model.Produto)
                <span class="form-control">@Html.DisplayFor(model => model.Produto.Nome)</span>
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.Valor)
                <span class="form-control">@Html.DisplayFor(model => model.Valor)</span>
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.Qtde)
                <span class="form-control">@Html.DisplayFor(model => model.Qtde)</span>
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.Venda.TotalVenda)
                <span class="form-control">@Html.DisplayFor(model => model.Venda.TotalVenda)</span>
            </div>
        </div>
    </fieldset>
    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-12 form-group">
            @Html.ActionLink("Voltar", "Index") |
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    }
</div>
