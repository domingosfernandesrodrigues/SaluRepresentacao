@model ControleDeEstoque.ViewModels.AlimentacaoViewModel

@{
    ViewBag.Title = "Alimentação";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<fieldset>
    <div class="form-horizontal">
        <h4>Cadastrar alimentação</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.FuncionarioId)
            <div>
                @Html.DropDownListFor(model => model.FuncionarioId, ViewBag.Funcionario as SelectList,"Selecione...", new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.FuncionarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Valor)
            <div>
                @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.TipoAlimentacao)
            <div>
                @Html.EditorFor(model => model.TipoAlimentacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoAlimentacao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Qtd)
            <div>
                @Html.EditorFor(model => model.Qtd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Qtd, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-12 form-group">
        <div class="col-md-4 pull-left">
            @Html.ActionLink("Voltar", "Index")
        </div>
        <div class="col-md-4 pull-right">
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>    
</fieldset>
}
