@model IEnumerable<ControleDeEstoque.ViewModels.CargoViewModel>

@{
    ViewBag.Title = "Cargo";
}

<h2>Cargos</h2>

<p>
    <button onclick="window.location.replace('@Url.Action("Create")')" class="btn btn-success">Novo</button>
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.CargoId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.CargoId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="text-center">
        <h4>Não há registro de Cargos!</h4>
    </div>
}
