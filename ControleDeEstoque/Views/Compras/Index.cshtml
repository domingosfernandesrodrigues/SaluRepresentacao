@model IEnumerable<ControleDeEstoque.ViewModels.ItensCompraViewModel>
@{
    ViewBag.Title = "Compra";
}
<h2>Compras</h2>
<p>
    <button onclick="window.location.replace('@Url.Action("Create")')" class="btn btn-success">Novo</button>
</p>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Compra.TotalCompra)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qtde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Compra.TotalCompra)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ItensCompraId }) |
                    @Html.ActionLink("Comprovante", "Details", new { id = item.ItensCompraId }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.ItensCompraId })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="text-center">
        <h4>Não há registro de Compras!</h4>
    </div>
}
