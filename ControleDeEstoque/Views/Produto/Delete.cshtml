@model ControleDeEstoque.ViewModels.ProdutoViewModel


<div>
    <h2>Excluir produto</h2>
    <hr />
    <form class="form-horizontal">
        <div class="row">
            <div class="col-lg-8">
                @Html.LabelFor(model => model.Nome)
                <span class="form-control">@Html.DisplayFor(model => model.Nome)</span>
            </div>

            <div class="col-lg-4">
                @Html.LabelFor(model => model.Foto)
                <span class="form-control">@Html.DisplayFor(model => model.Foto)</span>
            </div>

            <div class="col-lg-3">
                @Html.LabelFor(model => model.ValorPago)
                <span class="form-control">@Html.DisplayFor(model => model.ValorPago)</span>
            </div>

            <div class="col-lg-3">
                @Html.LabelFor(model => model.ValorVenda)
                <span class="form-control">@Html.DisplayFor(model => model.ValorVenda)</span>
            </div>

            <div class="col-lg-6">
                @Html.LabelFor(model => model.UnidadeMedidaId)
                <span class="form-control">@Html.DisplayFor(model => model.UnidadeMedida.Nome)</span>
            </div>

            <div class="col-lg-6">
                @Html.LabelFor(model => model.CategoriaId)
                <span class="form-control">@Html.DisplayFor(model => model.Categoria.Nome)</span>
            </div>

            <div class="col-lg-6">
                @Html.LabelFor(model => model.SubCategoriaId)
                <span class="form-control">@Html.DisplayFor(model => model.SubCategoria.Nome)</span>
            </div>

            <div class="col-lg-12">
                @Html.LabelFor(model => model.Descricao)
                <textarea class="form-control" id="textAreaExample6" rows="5">@Html.DisplayFor(model => model.Descricao)</textarea>
            </div>
        </div>
    </form>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-md-12 form-group">
            @Html.ActionLink("Voltar", "Index") |
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    }
</div>
