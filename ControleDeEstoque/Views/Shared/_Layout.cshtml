<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Salu Representação</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/diversosjs")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Início", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Empresa", "Index", "Empresa")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastros<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Funcionário", "Index", "Funcionario")</li>
                            <li>@Html.ActionLink("Fornecedor", "Index", "Fornecedor")</li>
                            <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                            <li>@Html.ActionLink("Formas de Pagamento", "Index", "TipoPagamento")</li>
                            <li>@Html.ActionLink("Categoria", "Index", "Categoria")</li>
                            <li>@Html.ActionLink("SubCategoria", "Index", "SubCategoria")</li>
                            <li>@Html.ActionLink("Unidade Medida", "Index", "UnidadeMedida")</li>
                            <li>@Html.ActionLink("Cargo", "Index", "Cargo")</li>
                            <li>@Html.ActionLink("Veículo", "Index", "Veiculo")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Compras", "Index", "Compras")</li>
                    <li>@Html.ActionLink("Vendas", "Index", "Venda")</li>
                    <li>@Html.ActionLink("Devolução", "Index", "DevolucaoCompras")</li>
                    <li>@Html.ActionLink("Alimentação", "Index", "Alimentacao")</li>                    
                    <li>@Html.ActionLink("Remuneração", "Index", "Remuneracao")</li>                    
                    <li>@Html.ActionLink("Manutenção", "Index", "ManutencaoVeiculo")</li>                    
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    
    <div class="container body-content form-group">
        @RenderBody()
        <hr />
        <br />
        <footer class="navbar-fixed-bottom" >
            <div class="col-md-12 panel-footer">
                <p>&copy; @DateTime.Now.Year - Salu Representações</p>
            </div>            
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/diversosjs")
    @RenderSection("scripts", required: false)
</body>
</html>
